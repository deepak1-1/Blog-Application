const mongoose = require('mongoose');
const Schema = mongoose.Schema;

const requestSchema = new Schema({

    sender: {
        type: String,
        required: [true, 'Please fill sender!']
    },
    receiver: {
        type: String,
        required: [true, 'Please fill receiver']
    },
    accepted: {
        type: Boolean,
        required: [true, 'Please send status also!']
    }
}, {timestamps : true});

const requestDataModel = mongoose.model('RequestData', requestSchema);
module.exports = requestDataModel;